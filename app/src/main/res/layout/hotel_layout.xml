<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F9">

        <LinearLayout
            android:paddingRight="15sp"
            android:paddingLeft="16sp"
            android:background="@drawable/background_for_round_corners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отель"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="16sp"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="257sp"
                />
            <LinearLayout
                android:layout_marginBottom="8sp"
                android:gravity="center"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:paddingLeft="3sp"
                android:paddingRight="10sp"
                android:background="#33FFC700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/ic_launcher_foreground"/>
                <TextView
                    android:textSize="16sp"
                    android:id="@+id/rait_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_marginRight="4sp"/>
                <TextView
                    android:textSize="16sp"
                    android:id="@+id/rait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Превосходно"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#000000"
                android:text="Name hotels"
                android:id="@+id/name_hotel"/>
            <TextView
                android:layout_marginTop="4sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#0D72FF"
                android:text="Name hotels"
                android:id="@+id/address_hotel"/>
            <LinearLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="0.95"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:text="от 135 874 Р"
                    android:id="@+id/price_hotel"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#828796"
                    android:text="за тур с перелетом"
                    android:id="@+id/travel_info"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="16sp"
            android:paddingTop="16sp"
            android:paddingRight="15sp"
            android:background="@drawable/background_for_round_corners"
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Об отеле"
                android:textSize="22sp"
                android:textColor="#000000"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
